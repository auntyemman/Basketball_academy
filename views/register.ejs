<!-----------------------Login page------------->
<section class="login-section register-ctn ">
    <h2>Registration</h2>
    <form class="login-info reg-info" action="/route/register" method="POST">
        <h3>Firstname</h3>
        <input type="text" placeholder="firstname" name="firstname">
        <hr>
        <h3>Lastname</h3>
        <input type="text" placeholder="lastname" name="lastname" >
        <hr>
        <h3>DOB</h3>
        <input type="date" placeholder="DOB" name="dob" >
        <hr>
        <h3>Email</h3>
        <input type="email" placeholder="email" name="email">
        <hr>
        <h3>Password</h3>
        <input type="password" placeholder="password" name="password">
        <hr>
        
        <button class="login-btn" target="_blank">Register</button>
    </form>
    <p>Already have an account? <a href="/login"><strong>Sign in</strong></a></p>

    
</section>

